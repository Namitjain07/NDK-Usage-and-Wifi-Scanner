<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">
    
    <View
        android:id="@+id/viewSignalIndicator"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvComparisonLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:textAppearance="@style/TextAppearance.App.TitleMedium"
        app:layout_constraintEnd_toStartOf="@+id/tvComparisonAvgSignal"
        app:layout_constraintStart_toEndOf="@+id/viewSignalIndicator"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Living Room" />

    <TextView
        android:id="@+id/tvComparisonMinMaxSignal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="12dp"
        android:textAppearance="@style/TextAppearance.App.BodyMedium"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewSignalIndicator"
        app:layout_constraintTop_toBottomOf="@+id/tvComparisonLocation"
        tools:text="Min: -78 dBm | Max: -62 dBm" />

    <TextView
        android:id="@+id/tvComparisonAvgSignal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.App.HeadlineMedium"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvComparisonMinMaxSignal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="-65 dBm" />

</androidx.constraintlayout.widget.ConstraintLayout>
